<section class="card">
  <div class="card-body">

    <div class="col-md-4 mx-auto">
      <div class="card text-center">
        <div class="card-header">
          <h1>Iniciar Juego
          </h1>
        </div>
        <div class="card-body">
          <form action="{{gameById._id}}" method="POST">
            {{#each gameById.gamers}}
              <div class="form-group">
                <label for="gamers">{{name}}</label>
                <input
                  type="number"
                  class="form-control"
                  id="bet"
                  name="bet"
                  ,
                  value="{{gamers.bet}}"
                  ,
                  placeholder="apuesta"
                  required
                />
              </div>
            {{else}}
              <h1>sin jugadores</h1>
            {{/each}}
            <div class="form-group">
              <button class="btn btn-primary btn-block" type="submit">
                apostar
              </button>
            </div>

          </form>
        </div>
      </div>
    </div>

  </div>
</section>